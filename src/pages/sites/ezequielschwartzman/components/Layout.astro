---
import "@/base.css";
import "../style.css";

const pb = (file: string) => `/public/ezequielschwartzman/${file}`;

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="bg-gray-100 font-sans">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href={pb("favicon.ico")} />
    <meta name="generator" content={Astro.generator} />

    <meta property="og:image" content={pb("social-image.jpg")} />
    <meta property="og:image:type" content="image/jpg" />
    <meta property="og:image:width" content="200" />
    <meta property="og:image:height" content="200" />

    <title>{title}</title>
    <meta name="description" content={title} />
  </head>
  <body class="h-screen">
    <main
      class="relative bg-gradient-to-r from-esgreen1 to-esgreen2 min-h-full tracking-wider text-white"
    >
      <div class="patterned h-full w-full absolute opacity-5"></div>
      <div
        class="relative mx-auto flex flex-col justify-center max-w-screen-md py-8"
      >
        <slot />
      </div>
    </main>
  </body>
</html>
