import AvatarBubble from "./components/AvatarBubble.jsx";
import CivCredit from "./components/CivCredit.astro";
import SectionTitle from "./components/SectionTitle.astro";
import SuperButton from "./components/SuperButton.astro";
import Link from "./components/Link.astro";

const avtr = (name: string) =>
  `/public/ezequielschwartzman/avatars/${name}.jpg`;
---

<Layout title="Ezequiel A. Schwartzman">
  <main
    class="relative bg-gradient-to-r from-[#90b461] to-[#53c8aa] min-h-full tracking-wider text-white"
  >
    <div
      class="h-full w-full absolute opacity-5"
      style={`background-image: url(${pattern})`}
    >
    </div>
    <div
      class="relative mx-auto flex flex-col justify-center max-w-screen-md py-8"
    >
      <header class="mb-8 flex flex-col items-center justify-center">
        <div class="mb-4 relative h-40 w-full overflow-hidden">
          <AvatarBubble src={avtr("wizard")} size={27} x={-270} y={-20} />
          <AvatarBubble src={avtr("hippie")} size={30} x={-230} y={30} />
          <AvatarBubble src={avtr("laugh")} size={40} x={-160} y={-30} />
          <AvatarBubble src={avtr("knot")} size={25} x={-130} y={30} />
          <AvatarBubble src={avtr("shaved")} size={100} x={0} y={0} />
          <AvatarBubble src={avtr("beach")} size={30} x={120} y={-50} />
          <AvatarBubble src={avtr("werewolf")} size={40} x={140} y={20} />
          <AvatarBubble src={avtr("tongue")} size={15} x={180} y={-40} />
          <AvatarBubble src={avtr("parent")} size={45} x={240} y={10} />
        </div>
        <h1 class="text-2xl px-4">
          Ezequiel <span title="Adrian">A.</span> Schwartzman
        </h1>
        <p class="opacity-75 text-sm px-4">
          Web Weaver • Experimenter • Possibility Manager Apprentice • Parent
        </p>
      </header>
      <div class="mb-8 px-4">
        <SectionTitle>What I have to offer</SectionTitle>
        <ul class="list-star opacity-75">
          <li>Websites creation & hosting.</li>
          <li>Web components that can be used anywhere.</li>
          <li>
            Connect & transform information on the web from anywhere to
            anywhere.
          </li>
          <li>Automate digital stuff.</li>
          <li>Web apps that can be installed as phone apps.</li>
          <li>Showing you how to do any of the mentioned things.</li>
          <li>Consulting on any web thing.</li>
        </ul>
      </div>
      <div class="mb-8 px-4">
        <SectionTitle>What I'm open to receving</SectionTitle>
        <ul class="list-star opacity-75">
          <li>Cash flowing through me to people that provide value to me.</li>
          <li>
            Non-material value such as possibilities, clarity, EHP, coaching,
            extraordinary spaces, etc.
          </li>
        </ul>
      </div>
      <div class="mb-8 px-4">
        <SectionTitle>Work philosophy</SectionTitle>
        <p class="opacity-75 mb-2">
          I receive messages with proposals/requests from team members. I
          schedule calls with team member/s to get to know each other and flesh
          out what's being called into creation. I keep in touch and fulfill
          requests as I see fit. You are invited to give back whatever you want
          in the spirit of the gift. Work is prioritized based on my enthusiasm,
          energy levels and time availability.
        </p>
        <div class="flex justify-center">
          <SuperButton href="https://t.me/zequez">Make Proposal</SuperButton>
        </div>
      </div>
      <div class="mb-8 px-4">
        <SectionTitle>Crazy thing that I'm comitted to make exist</SectionTitle>
        <div
          class="bg-gradient-to-r from-black/10 to-black/20 border border-white/75 border-solid rounded-md p-4 italic saturate-0"
        >
          <p>
            Collaborative web-building, team-weaving platform to co-create
            gameworld-boards/social-networks/web-apps/websites tailored to our
            teams needs. I'm currently seeking more clarity about it and
            experimenting with it's component parts.
          </p>
          <div class="text-right">
            <a
              href="https://t.me/zequez"
              target="_blank"
              class="text-white underline">Learn more...</a
            >
          </div>
        </div>
      </div>
      <div class="mb-8 px-4">
        <SectionTitle
          >Commit to my commitments with <i>civilization credits</i> on Patreon</SectionTitle
        >
        <div class="flex flex-wrap items-center justify-center">
          <CivCredit credit={7} />
          <CivCredit credit={13} />
          <CivCredit credit={20} />
          <CivCredit credit={54} />
          <CivCredit credit={108} />
          <CivCredit credit={500} />
        </div>
      </div>
      <div class="mb-8 px-4">
        <SectionTitle>Development and support commitments</SectionTitle>
        <div class="opacity-75 text-center">
          <p class="mb-4">If I take a request, I'll add it here.</p>
          <ul class="pl-8 flex flex-wrap justify-center">
            <li class="mx-2 mb-4">
              <Link href="https://ezequielschwartzman.archy.site"
                >My own website (this one)</Link
              >
            </li>
            <li class="mx-2 mb-4">
              <Link href="https://archy.site">
                The collaborative website building platform
              </Link>
            </li>
          </ul>
          <p class="">
            You can also
            <Link href="https://github.com/Zequez"
              >browse my programming activity on Github</Link
            > to see all the open source things I made over the years but I'm no
            longer interested.
          </p>
        </div>
      </div>
      <div class="mb-8 px-4">
        <SectionTitle>Newsletter</SectionTitle>
        <p class="opacity-75 text-center mb-8">
          Receive all my research discoveries, creative work updates and
          invitations
        </p>
        <div class="flex justify-center">
          <SuperButton
            href="https://docs.google.com/forms/d/e/1FAIpQLSeGyf8DYuMRH3B8QRx_9AKi5-4kxXor5VcND7TlYFe9r6u0gA/viewform?usp=sf_link"
            >Sign Up</SuperButton
          >
        </div>
      </div>
      <div></div>
    </div>
  </main>
</Layout>

<style>
  .list-star li::before {
    content: "★";
    color: rgb(255, 240, 29);
    font-size: 0.8em;
    margin-right: 0.5rem;
    position: relative;
    top: -1px;
    text-shadow: 0 1px 0px rgba(0, 0, 0, 0.3);
  }
</style>
