---
import Layout from "@layouts/Layout.astro";
import '@fontsource/kalam';
// import favicon from './favicon.svg';
const imagesImports = await Astro.glob('./images/*.jpg');
const images = imagesImports.map((imp) => imp.default).reduce((all, item) => {
	const m = item.match(/[^\/]+$/);
	console.log(m);
	if (m) {
		all[m[0]] = item;
	}
	return all;
}, {})
import avatar from './images/avatar-shaved.jpg'
import AvatarBubble from './components/AvatarBubble.astro';


// const siteConfig = {
// 	favicon
// 	title: "Ezequiel Adrian Schwartzman"
// }
---

<Layout title="Ezequiel A. Schwartzman">
	<main class="bg-gradient-to-r from-[#90b461] to-[#53c8aa] min-h-full tracking-wider text-white">
		<div class="mx-auto flex flex-col justify-center max-w-lg py-8">
			<header class="mb-4 flex flex-col items-center justify-center">
				<div class="mb-4 relative h-40 w-full">
					<AvatarBubble src={images['avatar-wizard.jpg']} size="27%" x={-270} y={-20}/>
					<AvatarBubble src={images['avatar-hippie.jpg']} size="30%" x={-230} y={30}/>
					<AvatarBubble src={images['avatar-laugh.jpg']} size="40%" x={-160} y={-30}/>
					<AvatarBubble src={images['avatar-knot.jpg']} size="25%" x={-130} y={30}/>
					<AvatarBubble src={images['avatar-shaved.jpg']} size="100%" x={0} y={0}/>
					<AvatarBubble src={images['avatar-beach.jpg']} size="30%" x={120} y={-50}/>
					<AvatarBubble src={images['avatar-long-hair.jpg']} size="40%" x={140} y={20}/>
					<AvatarBubble src={images['avatar-tongue.jpg']} size="15%" x={180} y={-40}/>
					<AvatarBubble src={images['avatar-parenting.jpg']} size="45%" x={240} y={10}/>
				</div>
				<h1 class="text-2xl">Ezequiel A. Schwartzman</h1>
				<div role="doc-subtitle" class="opacity-75 text-sm">Web Weaver • Experimenter • Possibility Manager Apprentice</div>
			</header>
			<div class="mb-4">
				<h2 class="text-xl font-kalam">What I have to offer</h2>
				<ul class="list-disc pl-8 opacity-75">
					<li>Websites creation & hosting.</li>
					<li>Web components that can be used on any website.</li>
					<li>Connect & transform information on the web from anywhere to anywhere. Automate stuff.</li>
					<li>Collaborative web apps.</li>
					<li>Showing you how to do any of the mentioned things.</li>
					<li>Consulting on any web thing.</li>
				</ul>
			</div>
			<div class="mb-4">
				<h2 class="text-xl font-kalam">What I'm open to receving</h2>
				<ul class="list-disc pl-8 opacity-75">
					<li>Cash flowing through me to people that provide value to me.</li>
					<li>Non-material value such as possibilities, clarity, EHP, coaching, extraordinary spaces, etc.</li>
				</ul>
			</div>
			<div class="mb-4">
				<h2 class="text-xl font-kalam">Work philosophy</h2>
				<p class="opacity-75 mb-2">I receive messages with proposals/requests from team members. I schedule calls with team member/s to get to know each other and flesh out what's being called into creation. I keep in touch and fulfill requests as I see fit. You are invited to give back whatever you want in the spirit of the gift. Work is prioritized based on my enthusiasm, energy levels and time availability.</p>
				<div class="flex justify-center">
					<a class="px-4 py-2 rounded-md text-white uppercase font-normal shadow-md tracking-widest bg-gradient-to-r from-[#b461b2] to-[#8561B4] border-solid border-2 border-[#8561B4] hover:scale-110 transition-all hover:saturate-150 duration-500" href="https://t.me/zequez" target="_blank">Make Proposal</a>
				</div>
			</div>
		<div>
	</main>
</Layout>