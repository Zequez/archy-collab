---
import "../base.css";
import { nameToMime } from "../lib/mimeTypes";

export interface Props {
  title: string;
  favicon: string | undefined;
  themeColor: string | undefined;
}

const title = Astro.props.title;
const favicon = Astro.props.favicon || "favicon.svg";
const themeColor = Astro.props.themeColor || "#6ef0d6";
---

<!DOCTYPE html>
<html lang="en" class="bg-gray-100 font-sans">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type={nameToMime(favicon)} href={favicon} />
    <!-- <link rel="apple-touch-icon" href="/pwa-192x192.png"> -->
    <!-- <link rel="mask-icon" href={getFavicon()} color="#FFFFFF"> -->
    <!-- <meta name="msapplication-TileColor" content="#FFFFFF"> -->
    <meta name="theme-color" content={themeColor} />
    <meta name="generator" content={Astro.generator} />

    <!---
    <meta property="og:image" content="http://example.com/logo.jpg" />
    <meta property="og:image:type" content="image/jpg" />
    <meta property="og:image:width" content="200" />
    <meta property="og:image:height" content="200" /> -->

    <title>{title}</title>
    <meta name="description" content={title} />

    <!-- <script src="/src/pwa.ts"></script> -->
    {/* pwaInfo && <Fragment set:html={pwaInfo.webManifest.linkTag} /> */}
  </head>
  <body class="h-screen">
    <div id="app-root" class="h-screen">
      <slot />
    </div>
    <div id="modal-root"></div>
  </body>
</html>

<style is:global></style>
