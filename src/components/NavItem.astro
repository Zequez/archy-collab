---
import cx from "classnames";
const { href, activePath, color } = Astro.props;
const hsla = `hsl(${color},50%,50%)`;
const activeClass = `md:-ml-[2px]`;
const isActive = activePath === href;
const style = isActive ? { backgroundColor: hsla } : {};
---

<li
  class="relative list-none h-full md:w-full md:h-auto md:py-0.5 py-0 px-0.5 md:px-0 group"
>
  <a
    class={cx(
      `relative py-4 px-4 md:px-4 h-full md:mx-0 cursor-pointer flex items-center justify-center focus:bg-white/10 group-hover:bg-white/10 rounded-[0.5rem_0.5rem_0_0] md:rounded-[0_0.5rem_0.5rem_0] `,
      { [activeClass]: isActive }
    )}
    style={style}
    href={href}
    tabindex="0"
    ><span
      class="drop-shadow-[0_1px_0_#000] border-b border-solid whitespace-nowrap"
      style={isActive ? {} : { borderColor: hsla }}
      ><slot />
    </span>
  </a>
</li>
