---
import { marked } from "marked";
const { value } = Astro.props;
---

<style is:global>
  .markdown p {
    margin-bottom: 0.75rem;
  }

  .markdown hr {
    height: 1px;
    background: rgba(0, 0, 0, 0.25);
    border: none;
    margin-bottom: 0.75rem;
  }

  .markdown ul {
    margin-bottom: 0.75rem;
    padding-left: 1rem;
  }
</style>

<div class="markdown" set:html={marked.parse(value)} />
